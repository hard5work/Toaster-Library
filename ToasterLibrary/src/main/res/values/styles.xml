<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="InputFieldError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputFieldLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/colorGray</item>
        <item name="hintTextAppearance">@style/HintTextProps</item>
        <item name="errorTextAppearance">@style/InputFieldError</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="theme">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>


    </style>
    <style name="HintTextProps">
        <item name="android:textColor">#353b48</item>
        <item name="android:textSize">14sp</item>

    </style>
</resources>